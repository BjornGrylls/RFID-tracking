@model RFID_tracking_web_MVC.Models.TagPacket;

@{
    ViewData["Title"] = "Home";
}

<div class="container; w-100">
    <div class="row">
        <div class="col-sm" style='background: #03FCE8'>
            <h1 class="d-flex justify-content-center">På vej ind i boksen</h1>
            <p>
                @Html.ActionLink("Liste", "List", new { inSafe=false })
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tags.First().EPC96)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tags.First().PeakRSSI)
                        </th>
                        <th>Status</th>
                        <th>Link</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.tags) {
                        Weapon weapon;
                        try {
                            weapon = (ViewBag.Weapons as List<Weapon>).Where(x => x.RfidTag == item.EPC96).First();
                        } catch (Exception) {
                            weapon = new Weapon { FriendlyName = "Ukendt!", Status = WeaponStatus._0 }; // Unknown RFID tag
                        }
                        @if (weapon.Status != WeaponStatus._1) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EPC96)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PeakRSSI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => weapon.Status)
                                </td>
                                <td>
                                    @{
                                        if (weapon.FriendlyName != "Ukendt!") {
                                            @Html.ActionLink(weapon.FriendlyName, "ConfirmationIn", new { weaponId=weapon.Id })
                                        } else {
                                            <p>Ukendt!</p>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>


        </div>
        <div class="col-sm" style='background: #33C827'>
            <h1 class="d-flex justify-content-center">På vej ud af boksen</h1>
            <p class="d-flex justify-content-end">
                @Html.ActionLink("Liste", "List", new { inSafe=true })
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tags.First().EPC96)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tags.First().PeakRSSI)
                        </th>
                        <th>Status</th>
                        <th>Link</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.tags) {
                        Weapon weapon;
                        try {
                            weapon = (ViewBag.Weapons as List<Weapon>).Where(x => x.RfidTag == item.EPC96).First();
                        } catch (Exception) {
                            weapon = new Weapon { FriendlyName = "Ukendt!", Status = WeaponStatus._0 }; // Unknown RFID tag
                        }
                        @if (weapon.Status == WeaponStatus._1) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EPC96)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PeakRSSI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => weapon.Status)
                            </td>
                            <td>
                                @{
                                    if (weapon.FriendlyName != "Ukendt!") {
                                        @Html.ActionLink(weapon.FriendlyName, "SpecifyUser", new { weaponId=weapon.Id })
                                    } else {
                                        <p>Ukendt!</p>
                                    }
                                }
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>





